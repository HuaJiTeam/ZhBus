<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="huajiteam.zhuhaibus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="huajiteam.zhuhaibus.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="huajiteam.zhuhaibus.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="huajiteam.zhuhaibus.SearchResultActivity"
            android:label="@string/title_activity_search_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="huajiteam.zhuhaibus.OnlineBusActivity"
            android:label="@string/title_activity_online_bus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="huajiteam.zhuhaibus.FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="huajiteam.zhuhaibus.FeedBackActivity" />
        <activity android:name="huajiteam.zhuhaibus.SearchStationActivity" />
        <activity android:name="huajiteam.zhuhaibus.StationInfoActivity"></activity>
    </application>

</manifest>