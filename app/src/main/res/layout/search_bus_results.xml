<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="8sp"
    android:paddingRight="8sp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_toLeftOf="@+id/addFavButton"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">

        <huajiteam.zhuhaibus.FocusedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2333路"
            android:id="@+id/lineName"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="20sp" />

        <huajiteam.zhuhaibus.FocusedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一些提示的内容"
            android:id="@+id/summaryMessage"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_location_searching_24dp"
        android:scaleType="centerInside"
        android:id="@+id/searchOLButton"
        android:contentDescription="@string/search_result_search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_favorite_24sp"
        android:scaleType="centerInside"
        android:id="@+id/addFavButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/searchOLButton"
        android:layout_toStartOf="@+id/searchOLButton" />
</RelativeLayout>