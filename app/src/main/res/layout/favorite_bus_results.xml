<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/searchOLButton">
        <huajiteam.zhbus.FocusedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2333路"
            android:id="@+id/lineName"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <huajiteam.zhbus.FocusedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一些提示的内容"
            android:id="@+id/summaryMessage"
            android:singleLine="true"
            android:ellipsize="marquee" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_result_search"
        android:id="@+id/searchOLButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>